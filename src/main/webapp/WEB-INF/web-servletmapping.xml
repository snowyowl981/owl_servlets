<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0" metadata-complete="true">
	<!-- @WebServlet을 사용할 때는 metadata-complete="false" -->
	<!-- @WebServlet을 사용하지 않을 때는 metadata-complete="true" -->

	<servlet>
		<servlet-name>helloWorld</servlet-name>
		<servlet-class>org.owl.servlet.examples.HelloWorldServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>helloMvc</servlet-name>
		<servlet-class>org.owl.servlet.examples.HelloMvcServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>helloWorld</servlet-name>
		<url-pattern>/helloWorld</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>helloMvc</servlet-name>
		<url-pattern>/helloMvc</url-pattern>
	</servlet-mapping>

</web-app>